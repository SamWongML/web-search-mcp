# Web Search MCP Configuration
# Copy this file to .env and fill in your API keys

# ─── Server Settings ─────────────────────────────────────────────
WEBSEARCH_DEBUG=false
WEBSEARCH_LOG_LEVEL=INFO
WEBSEARCH_HOST=0.0.0.0
WEBSEARCH_PORT=8000

# CORS origins (comma-separated or "*" for all)
WEBSEARCH_CORS_ORIGINS=*

# ─── Search Provider API Keys ────────────────────────────────────
# SerpAPI - https://serpapi.com (250 free searches/month)
WEBSEARCH_SERPAPI_KEY=

# Google Custom Search - https://developers.google.com/custom-search
# (100 free queries/day)
WEBSEARCH_GOOGLE_API_KEY=
WEBSEARCH_GOOGLE_CX=

# Brave Search API - https://brave.com/search/api/
# (2,000 free queries/month)
WEBSEARCH_BRAVE_API_KEY=

# Jina Reader API - https://jina.ai/reader/
# (10M free tokens, 20 RPM without key)
WEBSEARCH_JINA_API_KEY=

# ─── Rate Limits ─────────────────────────────────────────────────
WEBSEARCH_SERPAPI_REQUESTS_PER_HOUR=50
WEBSEARCH_GOOGLE_CSE_REQUESTS_PER_DAY=100
WEBSEARCH_BRAVE_REQUESTS_PER_SECOND=1.0
WEBSEARCH_DUCKDUCKGO_REQUESTS_PER_MINUTE=30

# ─── HTTP Client Settings ────────────────────────────────────────
WEBSEARCH_MAX_CONNECTIONS=100
WEBSEARCH_MAX_KEEPALIVE_CONNECTIONS=20
WEBSEARCH_REQUEST_TIMEOUT=30.0

# ─── Scraper Settings ────────────────────────────────────────────
WEBSEARCH_MAX_CONCURRENT_SCRAPES=5
WEBSEARCH_SCRAPE_TIMEOUT_SECONDS=30
WEBSEARCH_USE_BROWSER_SCRAPER=true

# ─── Cache Settings ──────────────────────────────────────────────
WEBSEARCH_CACHE_ENABLED=true
WEBSEARCH_CACHE_TTL_SECONDS=3600
WEBSEARCH_CACHE_MAX_SIZE=1000

# Optional: Redis URL for distributed caching
WEBSEARCH_REDIS_URL=
